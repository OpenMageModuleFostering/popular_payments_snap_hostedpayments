<config>
	<modules>
		<Evo_HostedPayments>
			<version>1.0.0</version>
		</Evo_HostedPayments>
	</modules>
	<global>
		<models>
			<hostedpayments>
				<class>Evo_HostedPayments_Model</class>
				<resourceModel>hostedpayments_resource</resourceModel>
			</hostedpayments>
			<hostedpayments_resource>
				<class>Evo_HostedPayments_Model_Resource</class>
				<entities>
					<hostedpayment>
						<table>evo_hostedpayments</table>
					</hostedpayment>
				</entities>
			</hostedpayments_resource>
		</models>
		<helpers>
			<hostedpayments>
				<class>Evo_HostedPayments_Helper</class>
			</hostedpayments>
		</helpers>
		<payment>
			<groups>
				<hostedpayments>Hosted Payments</hostedpayments>
			</groups>
		</payment>
		<resources>
			<hostedpayments_setup>
				<setup>
					<module>Evo_HostedPayments</module>
				</setup>
				<connection>
					<use>core_setup</use>
				</connection>
			</hostedpayments_setup>
			<hostedpayments_write>
				<connection>
					<use>core_write</use>
				</connection>
			</hostedpayments_write>
			<hostedpayments_read>
				<connection>
					<use>core_read</use>
				</connection>
			</hostedpayments_read>
		</resources>
		<blocks>
			<hostedpayments>
				<class>Evo_HostedPayments_Block</class>
			</hostedpayments>
			<payment>
				<rewrite>
					<payment_form>Evo_Payment_Block_Form</payment_form>
				</rewrite>
			</payment>
		</blocks>
	</global>
	<frontend>
		<secure_url>
			<hostedpayments_processing>/hostedpayments/processing</hostedpayments_processing>
		</secure_url>
		<routers>
			<hostedpayments>
				<use>standard</use>
				<args>
					<module>Evo_HostedPayments</module>
					<frontName>hostedpayments</frontName>
				</args>
			</hostedpayments>
		</routers>
        <layout>
            <updates>
                <evohostedpayments>
                    <file>evohostedpayments.xml</file>
                </evohostedpayments>
            </updates>
        </layout>
        <translate>
            <modules>
                <Mage_Checkout>
                    <files>
                        <default>Evo_HostedPayments.csv</default>
                    </files>
                </Mage_Checkout>
            </modules>
        </translate>
	</frontend>
    <adminhtml>
        <translate>
            <modules>
                <Mage_Checkout>
                    <files>
                        <default>Evo_HostedPayments.csv</default>
                    </files>
                </Mage_Checkout>
            </modules>
        </translate>
    </adminhtml>
	<default>
		<payment>
			<hostedpayments>
				<active>1</active>
				<model>hostedpayments/payment</model>
                <order_status>pending</order_status>
				<title>Pay by Credit or Debit Card</title>
                <allowspecific>0</allowspecific>
                <group>online</group>
			</hostedpayments>
		</payment>
	</default>
</config>
